[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.dotfiles": "",
      "~/.hushlogin": "hushlogin",
      "~/.oh-my-zsh": "oh-my-zsh/",
       "~/.zshrc": "zshrc",
      "~/.zsh-custom": "zsh-custom/",
      "~/.nvm": "nvm/",
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
       "~/.screenrc": "screenrc",
       "~/.gitconfig": "gitconfig",
       "~/.gitignore": ".gitignore"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["cp zsh-custom/themes/*.zsh-theme ~/.oh-my-zsh/themes/"]
    ]
  }
]
